CREATE TABLE character(
  id TEXT NOT NULL PRIMARY KEY,
  name TEXT NOT NULL,
  position INT NOT NULL UNIQUE,
  type TEXT MAPPED BY `const CharacterTypeConverter()` NOT NULL,
  description TEXT NOT NULL,
  custom BOOL NOT NULL
);

